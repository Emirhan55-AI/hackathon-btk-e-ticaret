# Aura Mobile App Environment Variables
# Copy this file to .env and fill in your actual values

# API Configuration
# Backend API base URL - Update this to your backend server URL
API_BASE_URL=http://localhost:8000/api/v1

# AI Service Configuration  
# External AI service endpoint for clothing analysis
AI_SERVICE_URL=http://localhost:8001/api/v1

# Image Processing Service
# Service for image upload and processing
IMAGE_PROCESSING_SERVICE_URL=http://localhost:8002/api/v1

# E-commerce Integration
# External e-commerce API endpoints for product recommendations
ECOMMERCE_API_URL=https://dummyjson.com
ECOMMERCE_API_KEY=your_ecommerce_api_key_here

# Authentication Configuration
# JWT token expiration time in minutes
TOKEN_EXPIRATION_MINUTES=60
REFRESH_TOKEN_EXPIRATION_DAYS=7

# App Configuration
# App environment (development, staging, production)
APP_ENVIRONMENT=development

# Debug Configuration
# Enable/disable debug logging
ENABLE_DEBUG_LOGGING=true

# Network Configuration
# Connection timeout in seconds
CONNECTION_TIMEOUT_SECONDS=30
READ_TIMEOUT_SECONDS=30
WRITE_TIMEOUT_SECONDS=30

# Storage Configuration
# Maximum image size for uploads (in MB)
MAX_IMAGE_SIZE_MB=10

# Analytics (Optional)
# Add your analytics service keys here
ANALYTICS_API_KEY=your_analytics_key_here

# Crash Reporting (Optional)
# Add your crash reporting service keys here
CRASHLYTICS_API_KEY=your_crashlytics_key_here
